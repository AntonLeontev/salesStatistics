        <a href="/add.php?action=add">тест базы</a>
        <a href="/add.php?action=delete_tests">удалить тест</a>
        <a id="add_orders" href="#">Добавить заказы</a>
    </nav>
</header>
    {% block content %}{% endblock %}

<script>
    let addOrders = document.querySelector('#add_orders');
    addOrders.onclick = function () {
        if (confirm('Перезагрузить базу?')) {
            document.location.href = '/add.php?action=add_orders';
        }
    }

</script>
</body>
</html>
